doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    script(type='text/javascript' src='/javascripts/vendor/popper.js')
    script(type='text/javascript' src='/javascripts/vendor/jquery-3.5.1.min.js')
    script(type='text/javascript' src='/javascripts/vendor/imask.js')
    script(type='text/javascript' src='/javascripts/inputMask.js')
    script(type='text/javascript' src='/javascripts/chart.js')
    script(src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0")



  body
    // Navbar
    // Navbar
    nav.mb-1.navbar.navbar-expand-lg.navbar-light#menuH
      a.navbar-brand.titleMenu(href='#')="Hub Bank "
        i.fab.fa-bitcoin.icon.fa-lg.d-inline
      button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarSupportedContent-555' aria-controls='navbarSupportedContent-555' aria-expanded='false' aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarSupportedContent-555.collapse.navbar-collapse

        ul.navbar-nav.ml-auto.nav-flex-icons
          li.nav-item.avatar
            a.nav-link.bitcoin.w-100.name=name
          li.nav-item.avatar
            a.nav-link.bitcoin.w-100.pl-3=amount + ' '
              i.fas.fa-coins.icon.fa-lg.d-inline.m-0.coin

          li.nav-item.avatar
            a.nav-link.bitcoin.w-100(href='/').pl-3
              i.fas.fa-sign-out-alt.icon.fa-lg.d-inline.m-0

    .row
      .col-2
        #wrapper
          // Sidebar
          #sidebar-wrapper
              .divItem
                a.menuItem.d-block(href='/transaction').item1 Transactions
                  i.fas.fa-file-invoice-dollar.float-left.icon.fa-lg
              .divItem
                a.menuItem.d-block(href='/transfert').item1 Transfert
                  i.fas.fa-comments-dollar.float-left.icon.fa-lg
              .divItem
                a.menuItem.d-block(href='/fund').item1 Ajout de fond
                  i.fas.fa-piggy-bank.float-left.icon.fa-lg
              .divItem
                a.menuItem.d-block(href='#').item1 Informations
                  i.fas.fa-info.float-left.icon.fa-lg

      .col-10
        .container
          h1=title
          br
          if errors != null
            .row.fail-flash
              each error in errors
                .col-12
                  p.text-flash=error.msg
          if success != null
            .row.success-flash
              .col-12
                p.text-flash=success
          br
          block content
      footer.page-footer.font-small.teal.pt-4.footer
        .row
          .col-12.socialLink

            // Facebook
            a.fb-ic
              i.fab.fa-facebook-f.fa-lg.white-text.mr-md-5.mr-3
            // Twitter
            a.tw-ic
              i.fab.fa-twitter.fa-lg.white-text.mr-md-5.mr-3
            // Google +
            a.gplus-ic
              i.fab.fa-google-plus-g.fa-lg.white-text.mr-md-5.mr-3
            // Linkedin
            a.li-ic
              i.fab.fa-linkedin-in.fa-lg.white-text.mr-md-5.mr-3
            // Instagram
            a.ins-ic
              i.fab.fa-instagram.fa-lg.white-text.mr-md-5.mr-3
            // Pinterest
            a.pin-ic
              i.fab.fa-pinterest.fa-lg.white-text
        .row
          .col-12
            .footer-copyright.text-center.py-3.copyright
              | &copy; 2020 Copyright:
              a#cegep-link(href='#')  Cegep Sorel-Tracy
